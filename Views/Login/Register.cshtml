@model GameX.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Rejestracja";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4 registered">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Stwórz nowe konto!</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group registered__block">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control registered__block__entry" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group registered__block">
                <label asp-for="Password">Hasło</label>
                <input asp-for="Password" class="form-control registered__block__entry" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group registered__block">
                <label asp-for="ConfirmPassword">Potwierdz hasło</label>
                <input asp-for="ConfirmPassword" class="form-control registered__block__entry" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default registered__block__button">Zarejestruj się!</button>
        </form>
        <div class="otherRegister">
            <div class="otherRegister__item">
                <i class="fab fa-facebook"></i>
                <p>Załóż konto za pomocą Facebooka</p>
            </div>
            <div class="otherRegister__item">
                <i class="fab fa-google"></i>
                <p>Załóż konto za pomocą konta Google</p>
            </div>
        </div>
    </div>
</div>
